{
	"name": "exocolonist-core",
	"version": "1.0.0",
	"description": "Core logic for reading/writing exocolonist save files",
	"author": "Christopher M.",
	"type": "module",
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier \"src/**/*.ts\" --write",
		"run": "node dist/index.js",
		"aio": "npm run lint && npm run build && npm run run"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/node": "^24.10.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4"
	}
}
